generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Movie {
  id       Int         @id @default(autoincrement())
  status   MovieStatus @default(CommingSoon)
  omdbId   String      @unique
  title    String
  year     String
  age      String
  released DateTime
  length   String
  genre    String
  director String
  actors   String
  plot     String
  language String
  country  String
  poster   String
  tickets  Ticket[]
  rating   Rating[]
}

enum MovieStatus {
  CurrentlyPlaying
  OutOfTheater
  CommingSoon
}

model Branch {
  id             Int             @id @default(autoincrement())
  location       String
  password       String          @unique
  staffSchedules StaffSchedule[]
  studios        Studio[]
}

model Staff {
  id       Int     @id @default(autoincrement())
  name     String
  isActive Boolean @default(true)
  address  String
  email    String  @unique
  password String

  staffSchedules StaffSchedule[]
  transaction    Transaction[]
}

model StaffSchedule {
  id       Int      @id @default(autoincrement())
  branchId Int
  staffId  Int
  date     DateTime
  shift    Shift

  branch Branch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  staff  Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([branchId, staffId, date, shift])
}

enum Shift {
  morning
  noon
  afternoon
}

model Studio {
  id         Int    @id @default(autoincrement())
  branchId   Int
  branch     Branch @relation(fields: [branchId], references: [id], onDelete: Cascade)
  studioName String //Studio 1,2,3

  seats Seat[]
}

model Seat {
  id       Int    @id @default(autoincrement())
  studioId Int
  row      String //A,B,C
  number   Int

  studio Studio   @relation(fields: [studioId], references: [id], onDelete: Cascade)
  ticket Ticket[]
}

model Ticket {
  id            Int      @id @default(autoincrement())
  movieId       String
  seatId        Int
  time          DateTime
  price         Float
  transactionId Int?

  movie       Movie        @relation(fields: [movieId], references: [omdbId], onDelete: Cascade)
  seat        Seat         @relation(fields: [seatId], references: [id], onDelete: Cascade)
  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@unique([movieId, time, seatId])
}

model User {
  id          Int       @id @default(autoincrement())
  username    String
  email       String    @unique
  password    String
  points      Int       @default(0)
  pointExpire DateTime?
  referalCode String?
  referalTo   String?

  transaction Transaction[]
  rating      Rating[]
}

model Transaction {
  id         Int             @id @default(autoincrement())
  staffId    Int?
  userId     Int?
  date       DateTime        @default(now())
  isPaid     Boolean         @default(false)
  invoiceNum String          @unique
  type       TypeTransaction
  pointsUsed Int?
  total      Float

  ticket Ticket[]
  Staff  Staff?   @relation(fields: [staffId], references: [id], onDelete: Cascade)
  User   User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum TypeTransaction {
  online
  offline
}

model Rating {
  movieId String
  userId  Int
  rate    Int

  movie Movie @relation(fields: [movieId], references: [omdbId], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([movieId, userId])
}
